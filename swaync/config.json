{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "control-right-margin-top": 0,
    "control-right-margin-bottom": 0,
    "control-right-margin-right": 0,
    "control-right-margin-left": 0,
    "notification-2fa-action": true,
    "notification-icon-size": 64,
    "notification-body-image-height": 100,
    "notification-body-image-width": 200,
    "timeout": 10,
    "timeout-low": 8,
    "timeout-critical": 0,
    "fit-to-screen": false,
    "control-right-width": 600,
    "control-right-height": 700,
    "notification-window-width": 500,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": false,
    "script-fail-notify": true,
    "widgets": [
        "title",
        "mpris",
        "backlight",
        "volume",
        "dnd",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "Centro de Notificações",
            "clear-all-button": true,
            "button-text": "Limpar Tudo"
        },
        "dnd": {
            "text": "Não Perturbe"
        },
        "label": {
            "max-lines": 1,
            "text": "Centro de Notificações"
        },
        "volume": {
            "label": "󰕾"
          },
        "mpris": {
            "image-size": 96,
            "image-radius": 7
        },
        "backlight": {
            "label": "󰃟"
        }
    },
    "notification-click-action": "default"
}
